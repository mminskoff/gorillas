%html
  %head
    %title Skillfari
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    .container-fluid
      - flash.each do |key, value|
        .alert{ :class => "alert-#{key}"}= value
      = yield
